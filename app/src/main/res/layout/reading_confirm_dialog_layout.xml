<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_curve"
    android:paddingStart="40dp"
    android:paddingTop="20dp"
    android:paddingEnd="40dp"
    android:paddingBottom="20dp">


    <TextView
        android:id="@+id/alertTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="सावधान !!"
        android:textColor="#FF2121"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="क्या आपने गाड़ी के मीटर की रीडिंग सही डाली हैं ।"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/alertTextView"
        app:layout_constraintStart_toStartOf="@id/alertTextView"
        app:layout_constraintTop_toBottomOf="@id/alertTextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/text2"
        app:layout_constraintStart_toStartOf="@id/text2"
        app:layout_constraintTop_toBottomOf="@+id/text2">

        <Button
            android:id="@+id/button_haa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_curve"
            android:text="हां, उपस्थिति दर्ज करे"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_nahi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/corner_curve"
            android:backgroundTint="#BABABA"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="नहीं"
            android:textSize="15sp"
            android:visibility="visible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

